<Window x:Class="Bai9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai9"
        mc:Ignorable="d"
        Title="Nhập Liệu Sinh Viên" Height="650" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Thông Tin Sinh Viên" Grid.Row="0" Padding="10" FontWeight="Bold">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Mã Sinh Viên" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Normal"/>
                <TextBox Name="txtMSSV" Grid.Row="0" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Họ Tên" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Normal"/>
                <TextBox Name="txtTen" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Chuyên Ngành" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Normal"/>
                <ComboBox Name="cmbNganh" Grid.Row="2" Grid.Column="1" Margin="5" FontWeight="Normal">
                    <ComboBoxItem>Hệ Thống Thông Tin</ComboBoxItem>
                    <ComboBoxItem IsSelected="True">Công Nghệ Phần Mềm</ComboBoxItem>
                    <ComboBoxItem>Khoa Học Máy Tính</ComboBoxItem>
                    <ComboBoxItem>An Toàn Thông Tin</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Giới Tính" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Normal"/>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                    <RadioButton Name="radNam"  Content="Nam" GroupName="GioiTinh" Margin="0,0,15,0" FontWeight="Normal" IsChecked="True"/>
                    <RadioButton Name="radNu" Content="Nữ" GroupName="GioiTinh" FontWeight="Normal"/>
                </StackPanel>

                <TextBlock Text="Chọn Các Môn Học Tham Gia" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,15,5,5" FontWeight="Normal"/>

                <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ListBox Name="lstChuaChon" Grid.Column="0" Height="100" FontWeight="Normal" SelectionMode="Multiple">
                        <ListBoxItem>Cơ Sở Dữ Liệu</ListBoxItem>
                        <ListBoxItem>Cơ Sở Dữ Liệu NC</ListBoxItem>
                        <ListBoxItem>PTTK Hệ Thống Thông Tin</ListBoxItem>
                        <ListBoxItem>Lập Trình Web</ListBoxItem>
                        <ListBoxItem>Nhập Môn Lập Trình</ListBoxItem>
                    </ListBox>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                        <Button Content="&gt;" Margin="0,0,0,10" Padding="10,5" Click="Button_Click"/>
                        <Button Content="&lt;" Padding="10,5" Click="Button_Click_1"/>
                    </StackPanel>

                    <ListBox Name="lstDaChon" Grid.Column="2" Height="100" FontWeight="Normal" SelectionMode="Multiple">
                    </ListBox>
                </Grid>

                <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Button Content="Lưu Thông Tin" Margin="5" Padding="10,5" FontWeight="Normal" Click="Button_Click_2"/>
                    <Button Content="Xóa Chọn" Margin="5" Padding="10,5" FontWeight="Normal" Click="Button_Click_3"/>
                </StackPanel>

            </Grid>
        </GroupBox>

        <ListView Name="DS" Grid.Row="3">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="MSSV" Width="120" DisplayMemberBinding="{Binding MSSV}"/>
                    <GridViewColumn Header="Họ tên" Width="200" DisplayMemberBinding="{Binding Ten}"/>
                    <GridViewColumn Header="Chuyên ngành" Width="250" DisplayMemberBinding="{Binding Nganh}"/>
                    <GridViewColumn Header="Giới tính" Width="100" DisplayMemberBinding="{Binding GioiTinh}"/>
                    <GridViewColumn Header="Số môn" Width="100" DisplayMemberBinding="{Binding SoMon}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
