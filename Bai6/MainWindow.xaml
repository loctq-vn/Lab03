<Window x:Class="Bai6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai6"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="Label1"  Grid.Column="0" HorizontalContentAlignment="Right" FontSize="24" Padding="5" IsReadOnly="True" BorderThickness="1" Margin="0,5,0,5"/>
            <TextBox Name="Label2" Grid.Column="1" HorizontalContentAlignment="Right" FontSize="24" Padding="5" IsReadOnly="True" BorderThickness="0" Margin="0,5,0,5"/>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="2"/>

            <Button Grid.Row="0" Grid.Column="0" Content="Backspace" Margin="2" Grid.ColumnSpan="2" Click="Button_Click"/>
            <Button Grid.Row="0" Grid.Column="2" Content="CE" Margin="2" Grid.ColumnSpan="2" Click="Button_Click_1"/>
            <Button Grid.Row="0" Grid.Column="4" Content="C" Margin="2" Click="Button_Click_2"/>

            <Button Grid.Row="1" Grid.Column="0" Content="7" Margin="2" Click="Button_Click_3"/>
            <Button Grid.Row="1" Grid.Column="1" Content="8" Margin="2" Click="Button_Click_4"/>
            <Button Grid.Row="1" Grid.Column="2" Content="9" Margin="2" Click="Button_Click_5"/>
            <Button Grid.Row="1" Grid.Column="3" Content="/" Margin="2" Click="Button_Click_6"/>
            <Button Grid.Row="1" Grid.Column="4" Content="sqrt" Margin="2" Click="Button_Click_7"/>
            
            <Button Grid.Row="2" Grid.Column="0" Content="4" Margin="2" Click="Button_Click_8"/>
            <Button Grid.Row="2" Grid.Column="1" Content="5" Margin="2" Click="Button_Click_9"/>
            <Button Grid.Row="2" Grid.Column="2" Content="6" Margin="2" Click="Button_Click_10"/>
            <Button Grid.Row="2" Grid.Column="3" Content="x" Margin="2" Click="Button_Click_11"/>
            <Button Grid.Row="2" Grid.Column="4" Content="%" Margin="2" Click="Button_Click_12"/>
            
            <Button Grid.Row="3" Grid.Column="0" Content="1" Margin="2" Click="Button_Click_13"/>
            <Button Grid.Row="3" Grid.Column="1" Content="2" Margin="2" Click="Button_Click_14"/>
            <Button Grid.Row="3" Grid.Column="2" Content="3" Margin="2" Click="Button_Click_15"/>
            <Button Grid.Row="3" Grid.Column="3" Content="-" Margin="2" Click="Button_Click_16"/>
            <Button Grid.Row="3" Grid.Column="4" Content="1/x" Margin="2" Click="Button_Click_17"/>
            
            <Button Grid.Row="4" Grid.Column="0" Content="0" Margin="2" Click="Button_Click_18"/>
            <Button Grid.Row="4" Grid.Column="1" Content="+/-" Margin="2" Click="Button_Click_19"/>
            <Button Grid.Row="4" Grid.Column="2" Content="." Margin="2" Click="Button_Click_20"/>
            <Button Grid.Row="4" Grid.Column="3" Content="+" Margin="2" Click="Button_Click_21"/>
            <Button Grid.Row="4" Grid.Column="4" Content="=" Margin="2" Click="Button_Click_22"/>


        </Grid>
    </Grid>
</Window>
