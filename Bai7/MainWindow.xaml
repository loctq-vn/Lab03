<Window x:Class="Bai7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai7"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="MÀN ẢNH" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Padding="10,5" Foreground="Orange"/>
        <UniformGrid Name="SeatGrid" Grid.Row="1" Rows="3" Columns="5" Margin="10">
            <Button Content="1" Background="White"/>
            <Button Content="2" Background="White"/>
            <Button Content="3" Background="White"/>
            <Button Content="4" Background="White"/>
            <Button Content="5" Background="White"/>

            <Button Content="6" Background="White"/>
            <Button Content="7" Background="White"/>
            <Button Content="8" Background="White"/>
            <Button Content="9" Background="White"/>
            <Button Content="10" Background="White"/>

            <Button Content="11" Background="White"/>
            <Button Content="12" Background="White"/>
            <Button Content="13" Background="White"/>
            <Button Content="14" Background="White"/>
            <Button Content="15" Background="White"/>
        </UniformGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10,5">
            <Label Content="Thành Tiền:" 
                   VerticalAlignment="Center" 
                   FontSize="14"/>
            <TextBox Name="txtThanhTien" 
                     Width="180" 
                     Height="25" 
                     IsReadOnly="True"
                     VerticalContentAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10,10,10,5">
            <Button Content="Chọn" Width="80" Height="30" Margin="5" Click="Button_Click"/>
            <Button Content="Hủy bỏ" Width="80" Height="30" Margin="5" Click="Button_Click_1"/>
            <Button Content="Kết thúc" Width="80" Height="30" Margin="5" Click="Button_Click_2"/>
        </StackPanel>
        
    </Grid>
</Window>
